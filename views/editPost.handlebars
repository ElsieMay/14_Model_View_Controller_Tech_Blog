<section>
	<a href="/dashboard">&larr; Back to Dashboard</a>
	<h2>Edit Post</h2>

	<form class="edit-post">
		<div>
			<label for="post-title">Post Title:</label>
			<br />
			<input type="text" name="title" value="{{post.title}}" />
			<br />
			<label for="post-content">Post Content:</label>
			<br />
			<textarea name="post-content" id="post-content" value="{{post.post_content}}"></textarea>
			<p>Created by {{post.user.name}} on {{format_date created_at}}</p>
		</div>
		<div>
			<button type="submit" class="btn btn-primary">Save Changes</button>
			<button type="button" class="btn btn-primary delete-post">Delete Post</button>
		</div>
	</form>
</section>

<form class="comment-form">
	<div>
		<textarea name="comment-body"></textarea>
	</div>
	<div>
		<button type="submit">add comment</button>
	</div>
</form>

<script src="./../../js/editPost.js"></script>
<script src="./../../js/deletePost.js"></script>
