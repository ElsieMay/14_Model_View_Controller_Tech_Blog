<section>
	<a href="/dashboard">&larr; Back to Dashboard</a>
	<h2>Edit Post</h2>

	<form class="edit-post">
		<div>
			<label for="post-title">Post Title:</label>
			<br />
			<input type="text" name="title" id="title" value="{{post.title}}" />
			<br />
			<label for="post-content">Post Content:</label>
			<br />
			<input name="post-content" id="post-content" value="{{post.post_text}}"></input>
			<p>Created by {{username}} on {{format_date created_at}}</p>
		</div>
		<div>
			<button type="submit" class="btn btn-primary edit-button">Save Changes</button>
			<button type="button" class="btn btn-primary delete-post" id="delete-post">Delete Post</button>
		</div>
		<div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
	</form>
</section>

<form class="comment-form">
	<div>
		<textarea name="comment-body"></textarea>
	</div>
	<div>
		<button type="submit">add comment</button>
	</div>
</form>

{{> comments post.comments}}

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/comment.js"></script>
